{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "temp",
    "sourceMap": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "pretty": true
  },
  "include": [
    "src/**/*",
    "index.ts",
    "test/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": true,
  "lib": ["es2017", "es6"]
}