{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es2017",
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "node",
    "pretty": false
  },
  "include": [
    "src/**/*",
    "index.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": true,
  "lib": ["es2017", "es6"]
}